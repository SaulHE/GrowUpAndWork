﻿<Brushes>
  <Brush Name="ModLib.Button.Base">
    <Layers>
      <BrushLayer Name="Default" Sprite="StdAssets\Popup\button_default" IsHidden="true" />
      <BrushLayer Name="Hovered" Sprite="StdAssets\Popup\button_default_hover" IsHidden="true" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" ColorFactor="1.1" IsHidden="false" HorizontalFlip="true" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Hovered" ColorFactor="1.1" IsHidden="false" HorizontalFlip="true" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Hovered" ColorFactor="0.8" IsHidden="false" HorizontalFlip="true" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.2" IsHidden="false" HorizontalFlip="true" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" AlphaFactor="0.5" IsHidden="false" HorizontalFlip="true" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="ModLib.Settings.Value.Display" BaseBrush="ModLib.Button.Base">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" IsHidden="true"/>
      <BrushLayer Name="Hovered" Sprite="BlankWhiteSquare_9" IsHidden="true"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" Color="#CCCCCC00" AlphaFactor="0.0" IsHidden="false"/>
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Hovered" Color="#FFFFFFFF" AlphaFactor="0.5" IsHidden="false"/>
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Hovered" Color="#FFFFFFFF" AlphaFactor="0.5" IsHidden="false"/>
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Hovered" Color="#FFFFFFFF" AlphaFactor="0.5" IsHidden="false"/>
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Hovered" Color="#FFFFFFFF" AlphaFactor="0.5" IsHidden="false"/>
      </Style>
    </Styles>
  </Brush>
</Brushes>

